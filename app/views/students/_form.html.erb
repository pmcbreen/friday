<%= form_for @student do |f| %>

 <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@student.errors.count, "error") %> prohibited
        this student from being saved:
      </h2>
      <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @student.member.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@student.member.errors.count, "error") %> prohibited
        this student from being saved:
      </h2>
      <ul>
        <% @student.member.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :first_name, "First Name" %><br>
    <%= f.text_field :first_name %>
  </p>
 
  <p>
    <%= f.label :last_name, "Last Name" %><br>
    <%= f.text_field :last_name %>
  </p>
  <h2> Login Info </h2>
 <%= fields_for :member, @student.member do |m| %>
  <p>
    <%= m.label :name %>
    <%= m.text_field :name, :size => 40 %>
  </p>
  
  <p>
    <%= m.label :password %>
    <%= m.password_field :password, :size => 40 %>
  </p>
  
  <p>
    <%= m.label :password_confirmation, "Confirmation" %>
    <%= m.password_field :password_confirmation, :size => 40 %>
  </p>
<% end %>
  <p>
    <%= f.submit %>
  </p>
<% end %>
