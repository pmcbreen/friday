<h1>The list of Teachers:</h1>

<%= link_to 'New Teacher', new_teacher_path %>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Title</th>
    <th>Aka</th>
    <th>Username</th>
  </tr>
 
  <% @teachers.each do |t| %>
    <tr>
      <td><%= t.firstname %></td>
      <td><%= t.lastname %></td>
      <td><%= t.title %></td>
      <td><%= t.aka %></td>
      <td><%= t.member.nil? ? '' : t.member.name %></td>
      <td><%= link_to 'Show', teacher_path(t) %></td>
      <td><%= link_to 'Edit', edit_teacher_path(t) %></td>
      <td><%= link_to 'Delete', teacher_path(t),
              method: :delete,
              data: { confirm: 'Are you sure you want to condemn this teacher to the eternal fires of hell?' } %></td>
    </tr>
  <% end %>
</table>

